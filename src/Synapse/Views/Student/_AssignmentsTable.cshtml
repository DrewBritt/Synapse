@model Synapse.Data.ViewModels.AssignmentsTableVM

<table class="table" style="margin:auto; margin-bottom: 1rem;" width="75%;" id="@Model.ClassId">
    <thead>
        <tr>
            <th>Assignment Name</th>
            <th>Category</th>
            <th>Grade</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.classAssignments.Count; i++)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => Model.classAssignments[i].AssignmentName)</td>
                <td>@Html.DisplayFor(modelItem => Model.classAssignmentCategories.Find(c => c.CategoryId == Model.classAssignments[i].CategoryId).CategoryName) - @Html.DisplayFor(modelItem => Model.classAssignmentCategories.Find(c => c.CategoryId == Model.classAssignments[i].CategoryId).CategoryWeight)%</td>
                <td>@Html.DisplayFor(modelItem => Model.studentGrades[i].GradeValue)%</td>
            </tr>
        }
    </tbody>
</table>