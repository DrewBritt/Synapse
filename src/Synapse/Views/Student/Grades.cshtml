@model List<Synapse.Data.Models.ClassWithTeacherInfo>

@{
    ViewData["Title"] = "Grades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width: 65%; margin-left: auto; margin-right: auto;">
    <div>
        <h1 class="title" style="font-weight: normal;">Schedule & Grades</h1>
        <hr>
        <div class="columns is-desktop">
            <div class="column is-full has-text-centered">
                <p class="title">Schedule</p>
                <table id="studentsTable" class="table" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Class Name</th>
                            <th>Teacher</th>
                            <th>Period</th>
                            <th>Grade in Class</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrolledClass in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => enrolledClass.ClassName)</td>
                                <td>@Html.DisplayFor(modelItem => enrolledClass.TeacherFullName)</td>
                                <td>@Html.DisplayFor(modelItem => enrolledClass.Period)</td>
                                <td>Grade Percent</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>