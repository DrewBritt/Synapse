@model List<Synapse.Data.Models.Teacher>
@using System.Web;

<div class="modal" id="selectTeacherModal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Select Teacher</p>
            <button type="button" class="delete modalClose" aria-label="close" onclick="closeModal()"></button>
        </header>
        <section class="modal-card-body">
            <label>
                <input class="input" type="text" placeholder="Search for teachers by name..." id="teachersSearchBar" onkeyup="namesTableSearchBar('teachersTable', 'teachersSearchBar')">
            </label>
            <div>
                <table id="teachersTable" class="table" style="margin: auto; width: 100%">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@teacher.TeacherFirstName</td>
                                <td>@teacher.TeacherLastName</td>
                                <td>
                                    <button type="button" onclick="newTeacher('@Html.Raw(HttpUtility.JavaScriptStringEncode(teacher.TeacherFirstName + " " + teacher.TeacherLastName))','@Html.Raw(teacher.TeacherId)')" class="button is-primary is-small modalClose">
                                        Select Teacher
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
        <footer class="modal-card-foot">
            <button type="button" class="button modalClose" onclick="closeModal()">Cancel</button>
        </footer>
    </div>
</div>