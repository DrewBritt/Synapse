@model Synapse.Data.ViewModels._AddStudentToClassVM

<div class="modal" id="classSearchModal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Select Class</p>
            <button type="button" class="delete modalClose" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <label>
                <input class="input" type="text" placeholder="Search for classes by name..." id="classesSearchBar" onkeyup="classesSearchTable('classesTable', 'classesSearchBar')">
            </label>
            <div class="is-centered">

                <table id="classesTable" class="table">
                    <thead>
                        <tr>
                            <th>Class</th>
                            <th>Teacher Name</th>
                            <th>Period</th>
                            <th>Location</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var newClass in Model.AllClasses)
                        {
                            @if (!Model.CurrentClasses.Contains(new Class { ClassId = newClass.ClassId }))
                            {
                            <tr>
                                <td>@newClass.ClassName</td>
                                <td>@newClass.TeacherFullName</td>
                                <td>@newClass.Period</td>
                                <td>@newClass.Location</td>
                                <td>
                                    <a class="button is-primary" asp-area="" asp-controller="Admin" asp-action="AddStudentToClass" asp-route-studentid=@Model.StudentId asp-route-classid=@newClass.ClassId>
                                        Select
                                    </a>
                                </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </section>
        <footer class="modal-card-foot">
            <button type="button" class="button modalClose">Cancel</button>
        </footer>
    </div>
</div>