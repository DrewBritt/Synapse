
@{
    ViewData["Title"] = "Add Referral";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container has-text-centered" style="width: 65%;">
        <h1 class="title">Submit Referral</h1>
        <h2 class="subtitle">Submit a referral for a student.</h2>

        <hr />
        <div style="width: 50%; margin-left: auto; margin-right: auto;">

            <div id="studentsModal" data-url="@Url.Action("_SelectStudent", "Teacher")">
                <div id="studentsModalContainer"></div>
            </div>

            @using (Html.BeginForm("AddReferral", "Teacher", FormMethod.Post))
            {
                <div class="field">
                    <label class="label">Student</label>
                    <div id="currentlySelectedStudentText">Currently Selected: None</div>
                    <button id="selectStudentBtn" type="button" class="button is-primary">Select Student</button>
                    <input name="studentid" id="studentid" hidden value="" />
                </div>
                <div class="field">
                    <label class="label">Description</label>
                    <div class="control has-icons-right">
                        <input type="text" class="input" name="description" id="descriptionInput" placeholder="Enter a description of the incident..." />
                    </div>
                </div>
                <button class="button is-primary">Submit</button>
            }
        </div>
    </div>

<script src="~/js/addReferral.js"></script>