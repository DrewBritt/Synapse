
@{
    ViewData["Title"] = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container has-text-centered" style="width: 65%;">
        <h1 class="title">Add Students</h1>
        <h2 class="subtitle">Add a student to the gradebook.</h2>

        <hr />

        <div class="field">
            <label class="label">First Name</label>
            <input type="text" class="input" name="firstname" id="firstnameInput" />
        </div>
        <br />
        <div class="field">
            <label class="label">Last Name</label>
            <input type="text" class="input" name="lastname" id="lastnameInput" />
        </div>
        <br />
        <div class="field">
            <label class="label">Email Address</label>
            <input type="text" class="input" name="email" id="emailInput" />
        </div>
        <br />
        <div class="field">
            <label class="label">Grade Level</label>
            <input type="text" class="input" name="gradelevel" id="gradelevelInput" />
        </div>
    </div>