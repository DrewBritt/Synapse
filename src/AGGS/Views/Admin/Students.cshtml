@model IEnumerable<AGGS.Models.Student>

@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container has-text-centered">
    <h1 class="title">View Students</h1>
    <h2 class="subtitle">
        View and search through all students.
    </h2>
    <label>
        <input class="input" type="text" placeholder="Search for students by name..." style="width: 65%; margin-left: auto; margin-right: auto" id="studentsSearchBar" onkeyup="studentsTableSearchBar('studentsTable', 'studentsSearchBar')" placeholder="Search for students by name...">
    </label>
    <div class="is-centered">
        
        <table id="studentsTable" class="table" style="width: 65%; margin-left: auto; margin-right: auto">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Grade Level</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GradeLevel)
                        </td>
                        <td>
                            <button class="button is-primary is-small">
                                View
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>