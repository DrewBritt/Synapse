@model AGGS.ViewModels.ViewStudentVM

@{
    ViewData["Title"] = "ViewStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width: 65%; margin-left: auto; margin-right: auto;">
    <div>
        <h1 class="title" style="font-weight: normal;">Viewing student <span class="has-text-weight-bold">@Model.StudentFirstName @Model.StudentLastName</span></h1>
        <hr>
        <div class="columns">
            <div class="is-full" style="width: 100%; margin-bottom: 2rem;">
                <div class="card">
                    <div style="padding: .75rem;">
                        <div class="columns">
                            <div class="column">
                                <p class="title">Student Information</p>
                            </div>
                            <div class="column">
                                <div class="is-pulled-right-desktop is-marginless" id="btns">
                                    <button id="editBtn" class="button is-primary">Edit</button>
                                </div>
                            </div>

                        </div>
                    </div>
                    <hr class="is-marginless">
                    <div class="card-content">
                        <div class="content">
                            <span id="nameLabel" class="has-text-weight-bold">Name:</span>
                            <div id="name">@Html.DisplayFor(modelItem => Model.StudentFirstName) @Html.DisplayFor(modelItem => Model.StudentLastName)</div>
                            <br>
                            <span id="emailLabel" class="has-text-weight-bold">Email:</span>
                            <div id="email">@Html.DisplayFor(modelItem => Model.Email)</div>
                            <br>
                            <span id="gradeLabel" class="has-text-weight-bold">Grade Level:</span>
                            <div id="grade">@Html.DisplayFor(modelItem => Model.GradeLevel)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="columns is-desktop">
        <div class="column is-full has-text-centered">
            <p class="title">Schedule</p>
            <table id="studentsTable" class="table" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Class Name</th>
                        <th>Teacher</th>
                        <th>Period</th>
                        <th>Grade in Class</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enrolledclass in Model.Classes)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => enrolledclass.ClassName)</td>
                            <td>@Html.DisplayFor(modelItem => enrolledclass.TeacherFullName)</td>
                            <td>@Html.DisplayFor(modelItem => enrolledclass.Period)</td>
                            <td>Grade Percent</td>
                            <td>
                                <a asp-area="" asp-controller="Admin" asp-action="ViewClass" asp-route-classid=@enrolledclass.ClassId>
                                    <button class="button is-primary is-small">
                                        View
                                    </button>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/editStudent.js"></script>   