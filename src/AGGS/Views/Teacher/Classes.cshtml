@model List<AGGS.Data.Models.Class>

@{
    ViewData["Title"] = "Classes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container has-text-centered" style="margin-bottom: 2rem;">
         <h1 class="title">View Subjects</h1>
         <h2 class="subtitle">
             View your subjects that you teach.
         </h2>
         <table class="table" style="width: 65%; margin-left: auto; margin-right: auto">
             <thead>
                 <tr>
                     <th>Subject Name</th>
                     <th>Actions</th>
                 </tr>
             </thead>
             <tbody>
                 <tr>
                     <td>Computer Science Pre-AP</td>
                     <td><a class="button is-primary is-small">Open</a></td>
                 </tr>
             </tbody>
         </table>
    </div>
    
    <div class="container has-text-centered">
        <h1 class="title">View Classes</h1>
        <h2 class="subtitle">
            View your classes.
        </h2>
        <table class="table" style="width: 65%; margin-left: auto; margin-right: auto">
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Period</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Period)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            <a asp-area="" asp-controller="Teacher" asp-action="ViewClass" asp-route-classid=@item.ClassId>
                                <button class="button is-primary is-small">
                                    View
                                </button>
                            </a>
                            <a asp-area="" asp-controller="Teacher" asp-action="Grades" asp-route-classid="@item.ClassId">
                                <button class="button is-primary is-small">
                                    Open Grades
                                </button>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>